{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Art</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Artist_id</th>
                <td>{{ entity.artistid }}</td>
            </tr>
            <tr>
                <th>Technique</th>
                <td>{{ entity.technique }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ entity.rating }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('art') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('art_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
